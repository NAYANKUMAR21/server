# ─── Server ───────────────────────────────────────
PORT=3000
NODE_ENV=production
WORKERS=4                   # Number of CPU workers (defaults to os.cpus().length)

# ─── MySQL ────────────────────────────────────────
DB_HOST=localhost
DB_PORT=3306
DB_USER=auth_user
DB_PASSWORD=your_strong_password_here
DB_NAME=auth_db
DB_POOL_SIZE=20             # Max concurrent DB connections

# ─── JWT ──────────────────────────────────────────
JWT_SECRET=replace-with-a-long-random-256bit-secret

# ─── CORS ─────────────────────────────────────────
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
